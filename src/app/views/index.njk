{% include "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/partials/page-landing.css">
{% endblock styles %}

{% block body %}

    <body id="page-landing">
        <div id="container">
            <div class="logo-container">
                <img src="/assets/logo.svg" alt="Proffy">
                <h2>Sua plataforma de estudos on line</h2>
            </div>

            <img class="hero-image" src="/assets/landing.svg" alt="Plataforma de estudos">

            <div class="buttons-container">
                <a class="study" href="/study">
                    <img src="/assets/icons/study.svg" alt="Estudar">
                    Estudar
                </a>
                <a class="give-classes" href="/give_classes">
                    <img src="/assets/icons/give-classes.svg" alt="Dar Aulas">
                    Dar Aulas
                </a>
            </div>
            <p class="total-connections">
                Total de 250 conexões já realizadas
                <img src="/assets/icons/purple-heart.svg" alt="Coração roxo">
            </p>
        </div>
    </body>
{% endblock body %}